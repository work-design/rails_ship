<div class="weui-form-preview">
  <div class="weui-form-preview__bd">
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:id) %></label>
      <span class="weui-form-preview__value"><%= @package.id %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:address_id) %></label>
      <span class="weui-form-preview__value">
        <%= @package.address.area.full_name %>
      </span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:state) %></label>
      <span class="weui-form-preview__value"><%= @package.state_i18n %></span>
    </div>
    <% if ['box_in', 'box_out'].include?(@package.state) %>
      <div class="weui-form-preview__item">
        <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:boxed_in_at) %></label>
        <span class="weui-form-preview__value"><time data-controller="time"><%= @package.boxed_in_at.to_fs(:iso8601) %></time></span>
      </div>
    <% end %>
    <% if ['box_out'].include?(@package.state) %>
      <div class="weui-form-preview__item">
        <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:boxed_out_at) %></label>
        <span class="weui-form-preview__value"><time data-controller="time"><%= @package.boxed_out_at.to_fs(:iso8601) %></time></span>
      </div>
    <% end %>
    <% if ['loaded', 'unloaded'].include?(@package.state) %>
      <div class="weui-form-preview__item">
        <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:loaded_at) %></label>
        <span class="weui-form-preview__value"><time data-controller="time"><%= @package.loaded_at.to_fs(:iso8601) %></time></span>
      </div>
    <% end %>
    <% if ['unloaded'].include?(@package.state) %>
      <div class="weui-form-preview__item">
        <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:unloaded_at) %></label>
        <span class="weui-form-preview__value"><time data-controller="time"><%= @package.unloaded_at.to_fs(:iso8601) %></time></span>
      </div>
    <% end %>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:box_id) %></label>
      <span class="weui-form-preview__value"><%= @package.box&.code %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Ship::Package.human_attribute_name(:confirm_mode) %></label>
      <span class="weui-form-preview__value"><%= @package.confirm_mode_i18n %></span>
    </div>
  </div>
</div>
