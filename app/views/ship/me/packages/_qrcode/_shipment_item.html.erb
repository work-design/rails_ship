<div class="media">
  <div class="media-content">
    <div class="level is-mobile">
      <div class="level-left">
        <strong><%= model.shipment.line.name %></strong>
        <span><%# model.shipment %></span>
      </div>
      <div class="level-right mt-0">
        <span class="<%= ['loaded'].include?(model.state) ? 'text-success' : 'text-danger' %>"><%= model.state_i18n %></span>
        <span class="tag"><%= model.confirm_mode_i18n %></span>
      </div>
    </div>
    <p>
      <span class="text-grey"><%= Ship::Package.human_attribute_name(:loaded_at) %></span>
      <time data-controller="time" data-format="human"><%= model.loaded_at&.to_fs(:iso8601) %></time>
    </p>
    <p>
      <span class="text-grey"><%= Ship::Package.human_attribute_name(:unloaded_at) %></span>
      <time data-controller="time" data-format="human" data-empty-target="text"><%= model.unloaded_at&.to_fs(:iso8601) %></time>
    </p>
  </div>
  <div class="weui-media-box__ft pr-2">
    <%= button_to({ controller: 'ship/me/packages', action: 'unloaded', id: @package.id, shipment_item_id: model.id }, class: 'button is-large is-warning') do %>
      <span>卸货</span>
    <% end if ['loaded'].include?(model.state) %>
  </div>
</div>
