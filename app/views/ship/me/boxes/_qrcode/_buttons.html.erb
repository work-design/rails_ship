<div
  data-controller="scan"
  data-scan-debug-value="false"
  data-scan-apis-value="<%= ['scanQRCode'].to_json %>"
  data-scan-options-value="<%= current_js_app&.js_config(request.original_url).to_json %>"
  class="buttons are-large is-centered"
>
  <button class="button is-success" data-action="scan#report" data-report-url="<%= url_for(controller: 'ship/me/boxes', action: 'in', id: @box.id) %>">装箱</button>
  <button class="button is-info" data-action="scan#report" data-report-url="<%= url_for(controller: 'ship/me/boxes', action: 'out', id: @box.id) %>">出箱</button>
</div>
<div class="buttons are-large is-centered">
<% if @box.current_rent %>
  <%= button_to({ controller: 'rents', action: 'finish', box_id: @box.id, id: @box.current_rent.id }, method: :patch, class: 'button is-warning') do %>
    <span>结束租用</span>
  <% end %>
<% end %>
</div>
<div class="buttons are-large is-centered">

</div>
