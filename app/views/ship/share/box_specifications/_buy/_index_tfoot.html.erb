<tfoot>
  <tr>
    <th colspan="3"></th>
    <th class="has-text-centered">
      <%= form_with url: { controller: 'trade/share/orders', action: 'create', organ_id: params[:organ_id] }, class: 'button_to' do |f| %>
        <%= f.hidden_field :ids, value: current_organ.member_trade_items.carting.where(aim: 'use', good_type: 'Ship::BoxSpecification').pluck(:id).join(',') %>
        <%= button_tag class: 'button is-success' do %>
          <i class="fa-light fa-credit-card"></i>
          <span class="pl-1"><%= t('.pay') %></span>
        <% end %>
      <% end %>
    </th>
    <th></th>
  </tr>
</tfoot>
