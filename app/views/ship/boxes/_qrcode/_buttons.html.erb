<% if current_user.organ_ids.all?(@box.organ_id) %>
  <%= link_to({ controller: 'ship/me/boxes', action: 'qrcode', id: @box.id, host: @box.organ.host }, class: 'button is-primary') do %>
    <span>箱子管理</span>
  <% end %>
<% else %>
  <%= link_to({controller: 'ship/boxes', action: 'in_edit', id: @box.code }, class: 'button is-info') do %>
    <span>出入库管理</span>
  <% end %>
<% end %>

<%= link_to({ controller: 'ship/my/boxes', action: 'qrcode', id: @box.id }, class: 'button is-success') do %>
  <span>个人用户</span>
<% end %>
