<tr id="tr_<%= model[0].id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'packages', action: 'address', address_id: model[0].id }, aria: { label: t('ship.admin.packages.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-box"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model[0].id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model[0].id }, data: { turbo_frame: 'modal' }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil"></i>
      <% end %>
    </div>
  </td>
</tr>
