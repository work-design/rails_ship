
<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Address.human_attribute_name(:contact) %></th>
      <th><%= Address.human_attribute_name(:tel) %></th>
      <th><%= Address.human_attribute_name(:area_id) %></th>
      <th><%= Address.human_attribute_name(:detail) %></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @addresses.each do |address| %>
    <tr id="address_<%= address.id %>">
      <td><%= address.contact %></td>
      <td><%= address.tel %></td>
      <td><%= address.area.full_name %></td>
      <td><%= address.detail %></td>
      <td>
        <%= link_to admin_address_path(address), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to admin_address_trade_items_path(address.id), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-dolly"></i>
        <% end %>
        <%= link_to admin_packages_path(address_id: address.id), aria: { label: t('ship.admin.packages.index.title') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-box"></i>
        <% end %>
        <%= link_to edit_admin_address_path(address), class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

