<td>
  <div class="is-several">
    <%= image_tag model.logo, class: 'image is-24x24' if model.logo.attached? %>
    <span><%= model.name %></span>
  </div>
</td>
<td><%= model.measure %></td>
<td><%= model.cost.to_money.format(html_wrap: true).html_safe %></td>
<td>
  <%= link_to({ controller: 'boxes', box_specification_id: model.id }, aria: { label: t('ship.panel.boxes.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-light fa-boxes-stacked"></i>
    <span class="pl-1"><%= model.boxes_count %></span>
  <% end %>
</td>
