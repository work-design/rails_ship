<div class="box is-padding-less mx-3">
  <div class="box-header">
    <i class="fa-solid fa-truck fa-fw"></i>
    <span><%= t('ship.admin.title') %></span>
  </div>
  <div class="weui-panel__bd">
    <div class="weui-cells" data-empty-target="content">
      <%= link_to({ controller: 'ship/admin/addresses' }, class: 'weui-cell weui-cell_active weui-cell_access') do %>
        <div class="media-content"><%= t('ship.admin.addresses.index.title') %></div>
        <div class="media-right">
          <i class="fa-solid fa-chevron-right"></i>
        </div>
      <% end %>
      <%= link_to({ controller: 'ship/admin/trade_items' }, class: 'weui-cell weui-cell_active weui-cell_access') do %>
        <div class="media-content"><%= t('ship.admin.trade_items.index.title') %></div>
        <div class="weui-cell__ft">
          <i class="fa-solid fa-chevron-right"></i>
        </div>
      <% end %>
      <%= link_to({ controller: 'ship/admin/packages' }, class: 'weui-cell weui-cell_active weui-cell_access') do %>
        <div class="media-content"><%= t('ship.admin.packages.index.title') %></div>
        <div class="weui-cell__ft">
          <i class="fa-solid fa-chevron-right"></i>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="<%= active_helper(modules: 'ship/admin', active: 'menu ex-accordion is-active', item: 'menu ex-accordion is-active') %>" data-controller="menu empty">
  <a class="menu-label" data-action="menu#toggle">
    <i class="fa-solid fa-fw fa-box"></i>
    <span>物流箱</span>
    <i class="fa-solid fa-fw dropdown"></i>
  </a>
  <div class="menu-list" data-empty-target="content">
    <%= link_to t('ship.admin.box_specifications.index.title'), { controller: 'ship/admin/box_specifications' }, class: active_helper(controllers: 'box_specifications', active: 'is-active') %>
  </div>
</div>
