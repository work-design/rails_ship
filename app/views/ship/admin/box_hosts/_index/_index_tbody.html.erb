<td>
  <div class="is-several">
    <%= image_tag model.logo, class: 'image is-24x24' if model.logo.attached? %>
    <span><%= model.name %></span>
  </div>
</td>
<td><%= model.box_specification.measure %></td>
<td>
  <%= link_to({ controller: 'boxes', box_host_id: model.id }, aria: { label: t('ship.panel.boxes.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-solid fa-boxes-stacked"></i>
    <span class="pl-1"><%= model.boxes_count %></span>
  <% end %>
</td>
<td>
  <p><%= model.tradable_count %></p>
  <p><%= model.traded_count %></p>
</td>
<td><%= model.price.to_money.format(html_wrap: true).html_safe %></td>
<td><%= (model.invest_ratio * 100).to_fs(:percentage, precision: 0) %></td>
