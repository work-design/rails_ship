<div>
  <dt><%= Ship::Package.human_attribute_name(:id) %></dt>
  <dd><%= @package.id %></dd>
</div>
<div>
  <dt><%= Ship::Package.human_attribute_name(:address) %></dt>
  <td>
  <% if @package.address %>
    <p><%= @package.address.area.full_name %></p>
    <p><%= @package.address.detail %></p>
  <% end %>
  </td>
</div>
<div>
  <dt><%= Ship::Package.human_attribute_name(:state) %></dt>
  <dd><%= @package.state_i18n %></dd>
</div>
<div>
  <dt><%= Ship::Package.human_attribute_name(:expected_on) %></dt>
  <dd><%= @package.expected_on %></dd>
</div>
<div>
  <dt><%= Ship::Package.human_attribute_name(:enter_url) %></dt>
  <dt><%= image_tag @package.qrcode_enter_url %></dd>
</div>
