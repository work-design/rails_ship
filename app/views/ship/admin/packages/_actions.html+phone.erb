<%= button_to({ action: 'destroy', id: model.id }, method: :delete, class: 'has-text-danger', form: { data: { turbo_confirm: t('.confirm') }, class: 'cell weui-actionsheet__cell_warn' }) do %>
  <i class="fa-solid fa-trash"></i>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= link_to({ action: 'edit', id: model.id }, class: 'cell') do %>
  <i class="fa-solid fa-pencil"></i>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= link_to({ action: 'show', id: model.id }, class: 'cell') do %>
  <i class="fa-solid fa-circle-info"></i>
  <span><%= t('.show.title') %></span>
<% end %>
<%= link_to({ action: 'shipment_items', id: model.id }, class: 'cell') do %>
  <i class="fa-solid fa-person-dolly has-text-success"></i>
  <span class="pl-1"><%= model.state_i18n %></span>
  <span class="pl-1"><%= model.shipment_items_count %></span>
<% end %>
<%= link_to({ controller: 'packageds', package_id: model.id }, class: 'cell') do %>
  <i class="fa-solid fa-list"></i>
  <span class="pl-1"><%= model.packageds_count %></span>
<% end %>
