<td>
  <p><%= model.address.content %></p>
  <p class="has-text-warning-dark"><%= model.address.station&.name %></p>
</td>
<td>
  <span><%= model.state_i18n %></span>
  <%= link_to({ controller: 'admin/shipment_items', action: 'show', shipment_id: model.shipment_item.shipment_id, id: model.shipment_item.id }, data: { turbo_frame: 'modal' }) do %>
    <i class="fa-solid fa-location-arrow"></i>
  <% end if model.shipment_item %>
</td>
<td>
  <p><%= model.box&.code %></p>
  <p class="has-text-info-dark"><time data-controller="time"><%= model.boxed_in_at&.to_fs(:iso8601) %></time></p>
  <p class="has-text-warning-dark"><time data-controller="time"><%= model.boxed_out_at&.to_fs(:iso8601) %></time></p>
</td>
<td><%= model.expected_on %></td>
<td>
  <%= link_to({ controller: 'packageds', package_id: model.id }) do %>
    <span><%= model.packageds_count %></span>
  <% end %>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
