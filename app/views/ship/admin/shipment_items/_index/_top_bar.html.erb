<div class="weui-panel is-borderless">
  <div data-controller="mini-program" data-mini-program-pt-class="pt-0" class="weui-panel__hd as-bar">
    <% if params[:station_id] %>
      <%= link_to({ controller: 'stations', action: 'shipments', id: params[:station_id] }, class: 'px-4') do %>
        <i class="fa-solid fa-lg fa-angle-left"></i>
      <% end %>
    <% else %>
      <%= link_to({ controller: 'shipments' }, class: 'px-4') do %>
        <i class="fa-solid fa-lg fa-angle-left"></i>
      <% end %>
    <% end %>
    <div class="weui-title">
      <i class="fa-solid fa-person-dolly-empty has-text-warning"></i>
      <span class="pl-1"><%= t('.title') %></span>
    </div>
    <i class="px-4" style="width: 37.5px"></i>
  </div>
</div>
