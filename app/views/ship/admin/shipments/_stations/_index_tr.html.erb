<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ action: 'packages', station_id: model.station_id }, aria: { label: t('ship.admin.shipments.packages.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-person-dolly-empty has-text-danger"></i>
      <% end %>
      <%= link_to({ action: 'loaded', station_id: model.station_id }, aria: { label: t('ship.admin.shipments.loaded.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-person-dolly has-text-success"></i>
      <% end %>
    </div>
  </td>
</tr>
