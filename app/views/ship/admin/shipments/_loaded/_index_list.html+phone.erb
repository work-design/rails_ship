<div class="weui-panel">
  <div class="weui-panel__hd">
    <div data-controller="check" data-check-name-value="xx" class="flex justify-content-right align-items-center">
      <%= check_box_tag 'xxd', 'xx', false, id: nil, data: { action: 'check#toggleAll' } %>
      <%= form_with url: { action: 'loaded_create' }, method: :post, class: 'button_to ml-2' do |f| %>
        <%= f.hidden_field :ids, data: { check_target: 'ids' } %>
        <%= f.hidden_field :address_id, value: params[:address_id] %>
        <%= button_tag data: { action: 'check#doSubmit' }, class: 'button is-small is-light' do %>
          <i class="fa-solid fa-person-dolly color-success"></i>
          <span class="pl-1"><%= t('.title') %></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="weui-panel__bd">
    <%= yield %>
  </div>
</div>
