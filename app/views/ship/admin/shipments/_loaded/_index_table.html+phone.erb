<div class="weui-panel">
  <div class="weui-panel__hd">
    <div data-controller="check" data-check-name-value="xx" class="is-flex is-justify-content-right">
      <%= check_box_tag 'xxd', 'xx', false, id: nil, data: { action: 'check#toggleAll' } %>
      <%= form_with url: { action: 'loaded_create' }, method: :post, class: 'button_to ml-2' do |f| %>
        <%= f.hidden_field :ids, data: { check_target: 'ids' } %>
        <%= f.hidden_field :address_id, value: params[:address_id] %>
        <%= button_tag data: { action: 'check#doSubmit' }, aria: { label: t('.package') }, class: 'button is-small is-dark' do %>
          <i class="fa-light fa-hand-holding-usd"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="weui-panel__bd">
    <%= yield %>
  </div>
</div>
