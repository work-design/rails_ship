<div>
  <dt><%= Trade::PaymentOrder.human_attribute_name(:user_id) %></dt>
  <td>
    <%= image_tag @payment_order.user.avatar, class: 'image is-24x24' if @payment_order.user.avatar.attached? %>
    <span><%= @payment_order.user.name %></span>
  </td>
</div>
<div>
  <dt><%= Trade::PaymentOrder.human_attribute_name(:order_id) %></dt>
  <dd><%= @payment_order.order.uuid %></dd>
</div>
<div>
  <dt><%= Trade::PaymentOrder.human_attribute_name(:state) %></dt>
  <dd><%= @payment_order.state_i18n %></dd>
</div>
<div>
  <dt><%= Trade::PaymentOrder.human_attribute_name(:check_amount) %></dt>
  <dd><%= @payment_order.check_amount.to_money.format.html_safe %></dd>
</div>
