<%= render 'top_bar' %>

<%= form_with theme: 'weui', model: @payment, scope: :payment, url: { action: 'payment_create', station_id: params[:station_id] } do |f| %>
  <div class="weui-form__control-area">
    <div class="weui-cells__group weui-cells__group_form">
      <div class="weui-cells">
        <%= f.number_field :total_amount %>
        <%= f.file_field :proof, required: true %>
      </div>
    </div>
  </div>
  <%= f.submit %>
<% end %>
