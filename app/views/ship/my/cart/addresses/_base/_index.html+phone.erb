<div class="box is-padding-less mx-3">
  <div class="box-header"><%= t('.title') %></div>
  <div class="weui-panel__bd">
    <div class="weui-cells weui-cells_radio">
      <%= render partial: 'address', collection: @addresses, as: :address %>
    </div>
  </div>
  <div class="weui-panel__ft">
    <%= button_to({ action: 'order_new' }, class: 'media') do %>
      <div class="media-content"><%= t('.new.title') %></div>
      <div class="media-right">
        <i class="fa-solid fa-chevron-right"></i>
      </div>
    <% end %>
  </div>
</div>
