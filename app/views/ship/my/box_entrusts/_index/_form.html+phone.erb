<%= form_with theme: 'weui', model: @order, url: { controller: 'box_buys', action: 'create', box_hold_id: @box_hold.id }, class: 'pt-0' do |f| %>
  <div class="weui-cells mt-0">
    <%= f.fields :items do |ef| %>
    <div class="weui-cell">
      <div class="weui-cell__hd">
        <label class="weui-label"><%= Ship::BoxBuy.human_attribute_name(:price) %></label>
      </div>
      <div data-controller="modify" class="weui-cell__bd is-flex is-align-items-center">
        <i class="fa-solid fa-xl fa-circle-minus has-text-grey-dark is-flex-none" data-action="click->modify#minus"></i>
        <%= ef.number_field :single_price, all: { normal: nil }, wrap: { input: nil }, label: nil, data: { modify_target: 'input' }, class: 'weui-input is-flex-grow-1' %>
        <i class="fa-solid fa-xl fa-circle-plus has-text-grey-dark is-flex-none pr-1" data-action="click->modify#plus"></i>
        <span class="is-flex-none" style="width: 3em"></span>
      </div>
    </div>
    <div class="weui-cell">
      <div class="weui-cell__hd">
        <label class="weui-label"><%= Ship::BoxBuy.human_attribute_name(:amount) %></label>
      </div>
      <div data-controller="modify" class="weui-cell__bd is-flex is-align-items-center">
        <i class="fa-solid fa-xl fa-circle-minus has-text-grey-dark is-flex-none" data-action="click->modify#minus"></i>
        <%= ef.number_field :number, all: { normal: nil }, wrap: { input: nil }, label: nil, data: { modify_target: 'input' }, class: 'weui-input is-flex-grow-1' %>
        <i class="fa-solid fa-xl fa-circle-plus has-text-grey-dark is-flex-none pr-1" data-action="click->modify#plus"></i>
        <span class="is-flex-none" style="width: 3em"></span>
      </div>
    </div>
    <% end %>
    <%= f.submit nil, all: { submit: 'weui-cell' } %>
  </div>
<% end %>
