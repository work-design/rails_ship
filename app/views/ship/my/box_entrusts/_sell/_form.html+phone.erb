<%= render 'amount' %>
<%= form_with theme: 'weui', model: @box_sell, url: { controller: 'box_sells', action: 'create', box_hold_id: @box_hold.id }, class: 'pt-0' do |f| %>
  <div class="weui-cells mt-0">
    <div class="weui-cell">
      <div class="media-left">
        <label class="weui-label"><%= Ship::BoxSell.human_attribute_name(:price) %></label>
      </div>
      <div data-controller="modify" class="weui-cell__bd flex align-items-center">
        <i class="fa-solid fa-xl fa-circle-minus text-grey-dark flex-none" data-action="click->modify#minus"></i>
        <%= f.number_field :price, all: { normal: nil }, wrap: { input: nil }, label: nil, data: { modify_target: 'input' }, class: 'weui-input flex-grow-1' %>
        <i class="fa-solid fa-xl fa-circle-plus text-grey-dark flex-none pr-1" data-action="click->modify#plus"></i>
        <span class="flex-none" style="width: 3em"></span>
      </div>
    </div>
    <div class="weui-cell">
      <div class="media-left">
        <label class="weui-label"><%= Ship::BoxSell.human_attribute_name(:amount) %></label>
      </div>
      <div data-controller="modify" class="weui-cell__bd flex align-items-center">
        <i class="fa-solid fa-xl fa-circle-minus text-grey-dark flex-none" data-action="click->modify#minus"></i>
        <%= f.number_field :amount, all: { normal: nil }, wrap: { input: nil }, label: nil, data: { modify_target: 'input' }, class: 'weui-input flex-grow-1' %>
        <i class="fa-solid fa-xl fa-circle-plus text-grey-dark flex-none pr-1" data-action="click->modify#plus"></i>
        <span class="flex-none" style="width: 3em"></span>
      </div>
    </div>
    <%= f.submit nil, all: { submit: 'weui-cell' }, class: 'weui-btn weui-btn_danger' %>
  </div>
<% end %>
