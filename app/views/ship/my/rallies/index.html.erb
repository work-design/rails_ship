<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= Rally.human_attribute_name(:name) %></th>
      <th><%= Rally.human_attribute_name(:detail) %></th>
      <th><%= Rally.human_attribute_name(:area_id) %></th>
      <th>
        <%= link_to new_my_rally_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @rallies.each do |rally| %>
    <tr>
      <td><%= rally.name %></td>
      <td><%= rally.detail %></td>
      <td><%= rally.area_id %></td>
      <td>
        <%= link_to my_rally_path(rally), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_my_rally_path(rally), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to my_rally_path(rally), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @rallies %>
