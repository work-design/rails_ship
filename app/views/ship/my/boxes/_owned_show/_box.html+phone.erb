<div class="weui-form-preview">
  <div class="weui-form-preview__bd">
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Ship::Box.human_attribute_name(:box_specification_id) %></label>
      <span class="weui-form-preview__value"><%= @box.box_specification.measure %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Ship::Box.human_attribute_name(:code) %></label>
      <span class="weui-form-preview__value"><%= @box.code %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Ship::Box.human_attribute_name(:rents_count) %></label>
      <span class="weui-form-preview__value"><%= @box.rents_count %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label">出租收益</label>
      <span class="weui-form-preview__value has-text-danger"><%= @box.rents.sum(:amount).to_money.format(html_wrap: true).html_safe %></span>
    </div>
  </div>
</div>
