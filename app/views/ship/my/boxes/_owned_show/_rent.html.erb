<tr>
  <td class="family-monospace size-7">
    <p class="text-success"><time data-controller="time" data-format="human"><%= model.start_at&.to_fs(:iso8601) %></time></p>
    <p class="text-danger"><time data-controller="time" data-format="human"><%= model.finish_at&.to_fs(:iso8601) %></time></p>
  </td>
  <td>
    <p class="p-1">
      <span><%= model.duration %></span>
      <span><%= model.promote.unit.name %></span>
    </p>
    <p><%= model.amount.to_money.format.html_safe %></p>
  </td>
  <td class="text-danger"><%= model.invest_amount.to_money.format.html_safe %></td>
</tr>
