<% if request.variant.include?(:mini_program) %>
  <div
    data-controller="mini-program"
    data-mini-program-url-value="/pages/addresses/index"
    data-mini-program-data-value="<%= { url: url_for(action: 'program', only_path: false, host: current_organ.mp_host) }.to_json %>"
    data-action="click->mini-program#navTo"
    class="button mx-3"
  >
    <%= t('.new.title') %>
  </div>
<% elsif request.variant.include?(:wechat) %>
  <div
    data-controller="wechat"
    data-wechat-url-value="<%= url_for(action: 'fork', only_path: false) %>"
    data-action="click->wechat#openAddress"
    class="button mx-3"
  >
    <%= t('.new.title') %>
  </div>
<% else %>
  <%= button_to({ action: 'new' }, class: 'button is-fullwidth') do %>
    <div><%= t('.new.title') %></div>
  <% end %>
<% end %>
