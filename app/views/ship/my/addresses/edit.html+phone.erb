<div class="box is-padding-less mx-3">
  <div class="box-header">
    <div class="level is-mobile">
      <div class="level-left">
        <div class="level-item">
          <%= link_to '返回', { action: 'index' }, class: 'weui-btn weui-btn_mini weui-btn_default' %>
        </div>
      </div>
      <div class="level-right mt-0">
        <div class="level-item">
          <%= button_to({ action: 'destroy', id: model.id }, method: :delete, data: { turbo_confirm: t('.destroy.confirm') }, class: 'weui-btn weui-btn_mini weui-btn_danger', form: { class: '' }) do %>
            <span>删除</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="weui-panel__bd">
    <%= render partial: 'edit_form', locals: { model: model } %>
  </div>
</div>

