<label class="weui-cell weui-cell_active weui-check__label" for="cart_address_id_<%= model.id %>">
  <span class="weui-cell__bd is-flex is-flex-direction-column">
    <span>
      <span><%= model.contact %></span>
      <span><%= model.tel %></span>
    </span>
    <span class="is-size-7">
    <% if model.floor.present? %>
      <span><%= Profiled::Address.human_attribute_name(:floor) %></span>
      <span><%= model.floor %></span>
    <% else %>
      <span><%= model.detail %></span>
    <% end %>
    </span>
  </span>
  <span class="weui-cell__ft" data-controller="input">
    <% if model.id != @cart.address_id %>
      <span class="has-text-grey is-size-7">选为默认</span>
    <% end %>
    <%= form_with theme: nil, scope: 'cart', url: { controller: 'trade/my/carts', action: 'update', id: params[:cart_id] }, method: :patch do |f| %>
      <%= f.radio_button :address_id, model.id, checked: model.id == @cart.address_id, class: 'weui-check', data: { action: 'input#form' } %>
      <span class="weui-icon-checked"></span>
    <% end %>
  </span>
</label>
