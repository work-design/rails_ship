<%= button_to({ action: 'destroy', id: model.id }, method: :delete, form: { data: { turbo_confirm: t('.destroy.confirm') }, class: 'cell' }, class: 'has-column-centered text-danger') do %>
  <i class="fa-solid fa-trash"></i>
  <span><%= t('.destroy.title') %></span>
<% end %>
<%= button_to({ action: 'edit', id: model.id }, class: 'cell has-column-centered') do %>
  <i class="fa-solid fa-pencil"></i>
  <span><%= t('.edit.title') %></span>
<% end %>
<%= button_to({ action: 'update', id: model.id }, method: :patch, params: { '[address]principal': true }, form: { class: 'cell' }, class: 'has-column-centered') do %>
  <i class="fa-solid fa-check-double"></i>
  <span>选为默认</span>
<% end %>
