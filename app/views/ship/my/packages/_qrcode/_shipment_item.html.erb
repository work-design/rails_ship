<div class="media">
  <div class="media-content">
    <div class="level is-mobile mb-0">
      <div class="level-left">
        <span><%= model.shipment.line.name %></span>
        <span><%# model.shipment %></span>
      </div>
      <div class="level-right mt-0">
        <span class="<%= ['loaded'].include?(model.state) ? 'text-success' : 'text-danger' %>"><%= model.state_i18n %></span>
      </div>
    </div>
    <p>
      <span class="text-grey"><%= Ship::ShipmentItem.human_attribute_name(:loaded_at) %>：</span>
      <time data-controller="time" data-format="human"><%= model.loaded_at&.to_fs(:iso8601) %></time>
    </p>
    <p>
      <span class="text-grey"><%= Ship::ShipmentItem.human_attribute_name(:unloaded_at) %>：</span>
      <time data-controller="time" data-format="human" data-empty-target="text"><%= model.unloaded_at&.to_fs(:iso8601) %></time>
    </p>
  </div>
</div>
