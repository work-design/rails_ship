<p>
  <strong><%= link_to model.code, { action: 'show', id: model.id }, text: true %></strong>
  <span class="tag"><%= model.status_i18n %></span>
</p>
<% if model.rented %>
  <div class="tags has-addons">
    <span class="tag is-info"><i class="fa-solid fa-hand-holding-box"></i></span>
    <span class="tag">已租出</span>
    <span class="tag"><%= model.owned_user&.name || model.owned_organ&.name %></span>
  </div>
<% end %>
