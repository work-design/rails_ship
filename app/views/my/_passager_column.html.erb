<div class="box is-padding-less">
  <div class="box-header">
    <span class="has-border-left-primary">乘客</span>
  </div>
  <div class="weui-panel__bd">
    <div class="columns is-4-mobile flex is-vcentered is-centered m-0" data-empty-target="content">
      <%= link_to({ controller: 'ship/my/favorites' }, class: 'column has-column-centered') do %>
        <div class="text-grey-dark">
          <i class="fa-solid fa-fw fa-xl fa-users"></i>
        </div>
        <div class="text-grey-dark size-0_9">
          <span><%= t('ship.my.favorites.index.title') %></span>
        </div>
      <% end if current_user.driver %>
      <%= link_to({ controller: 'ship/my/ways' }, class: 'column has-column-centered') do %>
        <div class="text-grey-dark">
          <i class="fa-solid fa-fw fa-xl fa-paper-plane"></i>
        </div>
        <div class="text-grey-dark size-0_9">
          <span><%= t('ship.my.ways.index.title') %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
