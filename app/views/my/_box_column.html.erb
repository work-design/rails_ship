<div class="weui-panel" data-controller="empty">
  <div class="weui-panel__hd">
    <span class="has-border-left-primary">物流箱</span>
  </div>
  <div class="weui-panel__bd">
    <div class="columns is-4-mobile flex is-vcentered is-centered m-0" data-empty-target="content">
      <%= link_to({ controller: 'ship/my/box_holds' }, class: 'column has-column-centered') do %>
        <div class="has-text-primary">
          <i class="fa-solid fa-fw fa-xl fa-boxes-packing"></i>
        </div>
        <div class="color-grey-dark">
          <span><%= t('ship.my.box_holds.index.title') %></span>
        </div>
      <% end %>
      <%= link_to({ controller: 'ship/my/box_holds', action: 'sell' }, class: 'column has-column-centered') do %>
        <div class="has-text-primary">
          <i class="fa-solid fa-fw fa-xl fa-hand-holding-dollar"></i>
        </div>
        <div class="color-grey-dark">
          <span><%= t('ship.my.box_holds.sell.title') %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
